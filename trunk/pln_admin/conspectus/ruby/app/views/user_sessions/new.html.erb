<% form_for @user_session, :url => user_session_path do |f| %>
<table class="show_record_table">
<tr>
  <td> User:  </td>
  <td class="halfindent"></span><%= f.text_field :login %> </td> 
</tr>
<tr>
  <td> Password:  </td>
  <td class="halfindent"> <%= f.password_field :password %></td>
</tr>
<tr> 
<td  colspan="2" align="center">
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit "Login" %> <br/> 
</td>
</tr>
</table> 
<div align+"center">
	  <div>
            <img src="/images/spacer.gif" alt="" border="0" height="12px" width="1">
        </div>
	  <%= f.error_messages %>
</div> 

<% end %>
