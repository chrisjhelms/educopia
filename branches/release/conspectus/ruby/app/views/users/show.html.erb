<p>
    Your are currently logged in as: <span class="menu"><%= link_to current_user.login, @user %></span>
</p>
<div class="indent">
    <p>
        <b>Login:</b>
        <%=h @user.login %>
    </p>
    <p>
        <b>Name:</b>
        <%=h @user.first_name %>
        <%=h @user.last_name %>
    </p>
    <p>
        <b>Email:</b>
        <%=h @user.email %>
    </p>
    <% if @user.content_provider then %>
    <p>
        <b>ContentProvider:</b>
        <%= render(:partial => "/content_providers/name",
        :locals => { :content_provider => @user.content_provider }) %>
    </p>
    <% end %>
    <p>
        <b>Rights:</b>
        <%=h @user.rights %>
    </p>
    <p>
        <b>Login count:</b>
        <%=h @user.login_count %>
    </p>
    <p>
        <b>Last login at:</b>
        <%=h @user.last_login_at %>
    </p>
    <p>
        <b>Current login ip:</b>
        <%=h @user.current_login_ip %>
    </p>
    <% if current_user.super? then %>
    <p>
        <b>Last request at:</b>
        <%=h @user.last_request_at %>
    </p>
    <p>
        <b>Current login at:</b>
        <%=h @user.current_login_at %>
    </p>
    <p>
        <b>Last login ip:</b>
        <%=h @user.last_login_ip %>
    </p>
    <% end %>
    <%= link_to 'Edit Profile', edit_user_path %>
</div>
